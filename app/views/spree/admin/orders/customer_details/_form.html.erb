<fieldset data-hook="admin_customer_detail_form_fields" class="no-border-top">

  <fieldset class="index no-border-bottom" data-hook="customer_guest">
    <legend align="center"><%= t(:account) %></legend>

    <div data-hook="customer_fields" class="row">
      <div class="alpha eight columns">
        <% user= Spree::User.find(@order.user_id) %>
        <div class="field">
          <strong>姓名:</strong>
          <span><%= user.username %></span>
        </div>
        <div class="field"><strong>公司:</strong><span><%= user.company %></span></div>
        <div class="field"><strong>电话:</strong><span><%= user.phone %></span></div>
        <div class="field"><strong>邮件:</strong><span><%= user.email %></span></div>
      </div>
  </fieldset>
</fieldset>